<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/activateBluetooth"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btDevicesSpinner"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btDevicesSpinner"
        android:layout_marginTop="24dp"
        android:onClick="onClick_ActivateBluetooth" />

    <Spinner
        android:id="@+id/btDevicesSpinner"
        android:name="btDevicesSpinner"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
         />

    <Button
        android:id="@+id/desactivateBluetooth"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/activateBluetooth"
        android:layout_alignRight="@+id/activateBluetooth"
        android:layout_below="@+id/activateBluetooth"
        android:layout_marginTop="14dp"
        android:onClick="onClick_DesactivateBluetooth" />

 />

</RelativeLayout>