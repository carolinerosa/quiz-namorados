<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1" xmlns:android="http://schemas.android.com/apk/res/android">
         
    <TextView
        android:text="Diretório:"
        android:id="@+id/txtRoot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView android:text=" " 
        android:id="@+id/txtPreencher" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"/>
    
        <LinearLayout android:layout_width="fill_parent" 
            android:gravity="center_vertical" 
            android:layout_height="wrap_content">

            <Button
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:onClick="click_Carregar"
                android:text="Pergunta" />
        
        </LinearLayout>



        <TextView
            android:id="@+id/Pergunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:text="Pergunta" />


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Resposta" />

   <EditText
       android:id="@+id/Resposta"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:ems="10"
       android:gravity="top"
       android:lines="2"
       android:singleLine="false" >

       <requestFocus />
   </EditText>


   <Button
       android:id="@+id/Voltar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:onClick="click_Voltar"
       android:text="Voltar" />







   <Button
       android:id="@+id/Sim"
       android:layout_width="242dp"
       android:layout_height="wrap_content"
       android:onClick="click_AvaliarSim"
       android:text="Sim" />

   <Button
       android:id="@+id/Nao"
       android:layout_width="242dp"
       android:layout_height="wrap_content"
       android:onClick="click_AvaliarNao"
       android:text="Não" />

</LinearLayout>